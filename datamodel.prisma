type User {
  id: ID! @id
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value: "")
  lastName: String @default(value: "")
  bio: String
  following: [User!]! @relation(name: "FollowRelation")
  follower: [User!]! @relation(name: "FollowRelation")
  post: [Post!]!
  like: [Like!]!
  comment: [Comment!]!
  room: [Room!]!
  loginSecret: String
}

type Post {
  id: ID! @id
  file: [File!]!
  location: String
  caption: String!
  like: [Like!]!
  comment: [Comment!]!
  user: User!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}

type Room {
  id: ID! @id
  participant: [User!]!
  message: [Message!]!
}

type Message {
  id: ID! @id
  text: String!
  from: User! @relation(name: "From")
  to: User! @relation(name: "To")
  room: Room!
}
